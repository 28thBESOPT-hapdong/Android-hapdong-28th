<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Androidhapdong28th" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/status_bar_color</item>

        <item name="android:fontFamily">@font/notosans_regular</item>
        <item name="android:letterSpacing">-0.05</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/dark_gray</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <style name="MainTabTheme" parent="Widget.Design.TabLayout">
        <item name="fontFamily">@font/notosans_regular</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="MainTabTheme.Selected">
        <item name="fontFamily">@font/applesdgothicneo_semibold</item>
        <item name="android:textColor">@color/red_orange</item>
    </style>

    <style name="MiddleTabTheme" parent="Widget.Design.TabLayout">
        <item name="fontFamily">@font/notosans_regular</item>
        <item name="android:textColor">@color/right_gray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MiddleTabTheme.Selected">
        <item name="fontFamily">@font/notosans_medium</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="HomeTitleStyle">
        <item name="fontFamily">@font/notosans_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="IndicatorStyle">
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_width">27dp</item>
    </style>

    <style name="IndicatorStyle.Selected">
        <item name="android:layout_width">26dp</item>
    </style>

    <style name="HomeButtonStyle" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/middle_gray</item>
        <item name="android:letterSpacing">-0.05</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="strokeColor">@color/home_more_btn_color</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">20dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="ScrollbarStyle">
        <item name="android:scrollbarAlwaysDrawHorizontalTrack">true</item>
        <item name="android:scrollbars">horizontal</item>
        <item name="android:fadeScrollbars">false</item>
        <item name="android:scrollbarThumbHorizontal">@color/dark_gray</item>
        <item name="android:scrollbarTrackHorizontal">@color/indicator_gray</item>
        <item name="android:scrollbarSize">3dp</item>
    </style>

</resources>