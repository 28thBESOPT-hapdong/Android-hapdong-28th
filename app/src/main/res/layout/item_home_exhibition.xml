<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="14dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/ic_launcher_background"
        android:scaleType="fitXY"
        app:layout_constraintDimensionRatio="302:222"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/applesdgothicneo_medium"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image"
        tools:text="인형놀이" />

    <TextView
        android:id="@+id/project_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:fontFamily="@font/applesdgothicneo_medium"
        android:textColor="@color/red_orange"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@id/title"
        app:layout_constraintLeft_toRightOf="@id/title"
        app:layout_constraintTop_toTopOf="@id/title"
        tools:text="n" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/applesdgothicneo_medium"
        android:text="@string/project_count"
        android:textColor="@color/middle_gray"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@id/project_count"
        app:layout_constraintLeft_toRightOf="@id/project_count"
        app:layout_constraintTop_toTopOf="@id/project_count" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        app:layout_constraintLeft_toLeftOf="@id/title"
        app:layout_constraintTop_toBottomOf="@+id/title">

        <TextView
            android:id="@+id/tag1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_home_tag"
            android:textColor="@color/red_orange"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="#보드게임" />

        <TextView
            android:id="@+id/tag2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:background="@drawable/background_home_tag"
            android:textColor="@color/red_orange"
            android:textSize="10sp"
            app:layout_constraintLeft_toRightOf="@+id/tag1"
            app:layout_constraintTop_toTopOf="@id/tag1"
            tools:text="#반려인형" />

        <TextView
            android:id="@+id/tag3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:background="@drawable/background_home_tag"
            android:textColor="@color/red_orange"
            android:textSize="10sp"
            app:layout_constraintLeft_toRightOf="@+id/tag2"
            app:layout_constraintTop_toTopOf="@id/tag2"
            tools:text="#꿀잠템" />

        <TextView
            android:id="@+id/tag4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:background="@drawable/background_home_tag"
            android:textColor="@color/red_orange"
            android:textSize="10sp"
            app:layout_constraintLeft_toRightOf="@+id/tag3"
            app:layout_constraintTop_toTopOf="@id/tag3"
            tools:text="#피규어" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>