<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="9dp"
    android:paddingBottom="37dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/image_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:cardCornerRadius="3dp"
        app:cardElevation="0dp"
        app:layout_constraintDimensionRatio="4:3"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/small_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:background="@drawable/ic_launcher_background"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/small_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:fontFamily="@font/notosans_regular"
        android:textColor="@color/right_gray"
        android:textSize="9sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_container"
        tools:text="의류  |  포인트랩" />

    <TextView
        android:id="@+id/small_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:fontFamily="@font/notosans_regular"
        android:text="여자 셋이 만든&lt;노브라 티셔츠&gt; 숨통이 트이는 '숨통티'"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="@id/small_category"
        app:layout_constraintTop_toBottomOf="@id/small_category"
        tools:text="여자 셋이 만든 &lt;노브라 티셔츠&gt;\n숨통이 트이는 '숨통티'" />

    <TextView
        android:id="@+id/small_goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:fontFamily="@font/notosans_bold"
        android:textColor="@color/red_orange"
        android:textSize="11sp"
        app:layout_constraintLeft_toLeftOf="@id/small_title"
        app:layout_constraintTop_toTopOf="@id/small_title"
        tools:text="1605% 달성" />

    <ImageView
        android:id="@+id/heart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:src="@drawable/heart_24_px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>